<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Uploaded Files</title>
    <!-- Include Font Awesome CSS if you want to use its icons -->
    <!-- <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css"> -->
</head>
<body>
    <h1>Uploaded Files</h1>
    <!-- File Upload Form -->
    <form action="/" method="POST" enctype="multipart/form-data">
        <input type="file" name="myfile">
        <button type="submit">Upload</button>
    </form>
    <ul>
        <% if (files && files.length) { %>
            <% files.forEach(function(file) { %>
                <li>
                    <a href="/uploads/<%= encodeURIComponent(file.originalname) %>"><%= file.originalname %></a>
                    <!-- Download Symbol -->
                    <a href="/download/<%= encodeURIComponent(file.originalname) %>">&#x1F4E5;</a>
                    <!-- Bin Symbol -->
                    <form action="/delete/<%= encodeURIComponent(file.originalname) %>" method="POST" style="display: inline;">
                        <button type="submit">&#x1F5D1;</button>
                    </form>
                </li>
            <% }); %>
        <% } else { %>
            <li>No files uploaded yet.</li>
        <% } %>
    </ul>
</body>
</html>


